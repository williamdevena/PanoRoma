<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/home_frag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/colosseo">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/colosseo_button"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:src="@drawable/colosseo"
                        android:scaleType="fitXY"
                        android:background="#CD4F4F">
                    </ImageButton>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Colosseo"
                        android:textSize="25sp"
                        android:textColor="#F7F6F6"
                        android:paddingLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#CD4F4F"
                        android:textStyle="italic">
                    </TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/pincio">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/pincio_button"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:src="@drawable/pincio"
                        android:scaleType="fitXY"
                        android:background="#CD4F4F">
                    </ImageButton>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terrazza del pincio"
                        android:textSize="25sp"
                        android:textColor="#F7F6F6"
                        android:paddingLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#CD4F4F"
                        android:textStyle="italic">
                    </TextView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/aranci">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/aranci_button"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:src="@drawable/aranci"
                        android:scaleType="fitXY"
                        android:background="#CD4F4F">
                    </ImageButton>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giardino degli aranci"
                        android:textSize="25sp"
                        android:textColor="#F7F6F6"
                        android:paddingLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#CD4F4F"
                        android:textStyle="italic">
                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/zodiaco">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/zodiaco_button"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:src="@drawable/zodiaco"
                        android:scaleType="fitXY"
                        android:background="#CD4F4F">
                    </ImageButton>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zodiaco"
                        android:textSize="25sp"
                        android:textColor="#F7F6F6"
                        android:paddingLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#CD4F4F"
                        android:textStyle="italic">
                    </TextView>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
